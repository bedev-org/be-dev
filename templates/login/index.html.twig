{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="container">     
    <div class="hero">
        <form action="{{ path('app_login') }}" method="post" class="form">
   
        <h1 id ="logo"class="logo yellowbedev-text text-4xl my-4">lo<span class="text-white">gin</span></h1>
        <input for="username" value="{{ last_username }}" type="text" name="_username" id="username" required="" class="input" placeholder="Exemple@exemple.fr">
        <input type="password" name="_password" id="password" required="" class="input" placeholder="Mot de passe">   
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
        <input type="submit" id="Log in" class="input submit">
        <p class="forgotten">Vous avez oubli√© vos identifiants de connexion  ? <a href="#"> Obtenez de l'aide pour vous connecter.</a></p>

        </form>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
.container {
  height: 100%;
  width: 100%;
  
}

.hero {
  padding: 100px 20px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: none;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
}
.form input:hover, password:hover .form input btn:hover{
  background:#F7DC6F;
}


.input {
  padding: 1rem 1.2rem;
  margin: 1rem;

  display: block;
  width: 100%;
  border: none;
  box-shadow: inset 6px 6px 8px rgba(97, 97, 97, 0.075),
    6px 6px 6px rgba(255, 255, 255, 0.781);
  outline: none;
  background-color: inherit;
  color: rgb(161, 161, 161);
  font-size: inherit;
  
}
{# .form, btn:hover, a:hover, .div input btn:hover {
color:#F7DC6F; #}

text-decoration:none;
}
.submit , .btn {
  margin-top: 20px;
  font-weight: bold;
  box-shadow: -3px -3px 5px white, 3px 3px 5px rgba(209, 209, 209, 0.705);
  color: rgb(112, 112, 112);
  cursor: pointer;
}

.btn {
  text-align: center;
  color: black;
}
.form button:hover {
  width: 100%;
  color: white;
  background:#F7DC6F;
 
}
    

{# .logo {
  font-size: 3rem;
  color: yellow;
  font-weight: 600;
  margin: 30px;
} #}

::placeholder {
  color: rgb(161, 161, 161);
}

.forgotten {
  text-align: center;
  font-size: .8rem;
  width: 80%;
  color: gray;
  margin: 15px 0;
}

a {
  color: inherit;
  font-weight: bold;
  text-decoration: none;
}

.or {
  position: relative;
  font-weight: bold;
  color: rgb(112, 112, 112);
}


{% extends 'base.html.twig' %}

{% block title %}Bedev | Page de connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div>Déjà connecté </div>
    {% else %}
        <section class="bg-black items-center justify-center flex min-h-screen">
                    <div class="blackbedev border-2 border-black flex flex-col items-center justify-center h-[50rem] w-[40rem] ">
                        <div class="flex items-center justify-center">
                            <img class="mt-16" height="150px" width="150px" src="{{ asset('images/logos/be-dev.svg') }}" alt="Be-dev"/>
                        </div>
                        <form action="{{ path('app_login') }}" method="post" class="text-center items-center justify-center h-full w-full">
                            <div {{ react_component('MyComponent') }}>
                                Loading... <i class="fas fa-cog fa-spin fa-3x"></i>
                            </div>
                            <input type="hidden" name="_target_path" value="/profil" /> 
                        </form>
                    </div>
        </section>
    {% endif %}


{% endblock %}